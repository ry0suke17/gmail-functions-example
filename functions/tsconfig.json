{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "experimentalDecorators": true,
    "lib": ["es2015.promise"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@infrastructure/*": ["src/app/infrastructure/*"]
    }
  }
}
